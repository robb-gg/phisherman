# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://phisherman:password@localhost:5432/phisherman
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Database credentials (for Docker Compose)
POSTGRES_USER=phisherman
POSTGRES_PASSWORD=password
POSTGRES_DB=phisherman
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_MAX_CONNECTIONS=10

# Celery
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# Docker Compose Overrides
COMPOSE_PROJECT_NAME=phisherman

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Network Configuration
HTTP_TIMEOUT=10
DNS_TIMEOUT=5
WHOIS_TIMEOUT=10
MAX_RETRIES=3
USER_AGENT="Phisherman/1.0 (+https://github.com/yourusername/phisherman)"

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# External APIs (Optional - add your keys)
VIRUSTOTAL_API_KEY=
SHODAN_API_KEY=
ABUSE_CH_API_KEY=

# Feed Refresh Intervals (minutes)
PHISHTANK_REFRESH_INTERVAL=15
OPENPHISH_REFRESH_INTERVAL=15
URLHAUS_REFRESH_INTERVAL=15

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_HOST=localhost
METRICS_ENDPOINT=/metrics

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# OpenTelemetry (Optional)
OTEL_SERVICE_NAME=phisherman
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8001
