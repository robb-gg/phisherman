# Production Environment Configuration Template
# Copy this file to .env for production deployments
# NEVER commit this file with real secrets!

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING
API_PREFIX=/api/v1

# Security (REQUIRED: Generate strong random values)
SECRET_KEY=CHANGE-ME-TO-STRONG-RANDOM-SECRET-64-CHARS-MIN
ALLOWED_HOSTS=["yourdomain.com","api.yourdomain.com"]

# Database Configuration (REQUIRED: Set strong password)
DATABASE_URL=postgresql://phisherman:STRONG-RANDOM-PASSWORD@db-host:5432/phisherman
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Database credentials for infrastructure
POSTGRES_USER=phisherman
POSTGRES_PASSWORD=STRONG-RANDOM-PASSWORD
POSTGRES_DB=phisherman
POSTGRES_HOST=db-host
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis-host:6379
REDIS_HOST=redis-host
REDIS_PORT=6379
REDIS_MAX_CONNECTIONS=20

# Celery
CELERY_BROKER_URL=redis://redis-host:6379
CELERY_RESULT_BACKEND=redis://redis-host:6379
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# Rate Limiting (Adjust based on expected load)
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=50

# Network Configuration (Production timeouts)
HTTP_TIMEOUT=15
DNS_TIMEOUT=8
WHOIS_TIMEOUT=15
MAX_RETRIES=2
USER_AGENT="YourCompany-PhishermanBot/1.0 (+https://yourdomain.com/about)"

# External APIs (REQUIRED: Add your API keys)
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here
SHODAN_API_KEY=your-shodan-api-key-here
ABUSE_CH_API_KEY=your-abuse-ch-api-key-here

# Feed Configuration (Production intervals)
PHISHTANK_REFRESH_INTERVAL=10
OPENPHISH_REFRESH_INTERVAL=10
URLHAUS_REFRESH_INTERVAL=10

# Monitoring
PROMETHEUS_PORT=9090
PROMETHEUS_HOST=prometheus-host
METRICS_ENDPOINT=/metrics

# Grafana (Set strong admin password)
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=STRONG-RANDOM-GRAFANA-PASSWORD

# OpenTelemetry (Optional)
OTEL_SERVICE_NAME=phisherman-prod
OTEL_EXPORTER_JAEGER_ENDPOINT=http://jaeger-host:14268/api/traces

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Docker Compose
COMPOSE_PROJECT_NAME=phisherman-prod

# Production Security Headers
CORS_ORIGINS=["https://yourdomain.com","https://api.yourdomain.com"]
ENABLE_DOCS=false  # Disable swagger docs in production
